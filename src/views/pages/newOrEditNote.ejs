<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head", { pageTitle: "New Note" }); %>
    <link rel="stylesheet" href="/css/newOrEditNote.css" />
  </head>
  <body>
    <div class="contentContainer">
      <% if (message) { %>
        <span class="message success"><%= message %></span>
      <% } %>
      <header>
        <%- include("../partials/backLink", { href: "/notes" }) %>
        <h1><%= title %></h1>
        <hr/>
      </header>

      <form action="/notes/new" method="post">
        <% if (inEditMode) { %>
          <input type="hidden" name="id" value="<%= noteToEdit._id %>" />
        <% } %>

        <div class="inputGroup">
          <div>
            <label for="title">Title:</label>
            <input
              type="text"
              id="title"
              name="title"
              required
              value="<%= noteToEdit ? noteToEdit.title : '' %>"
            />
          </div>
          <% if (errors?.title) { %>
            <span class="formError"><%= errors.title %></span>
          <% } %>
        </div>

        <div class="inputGroup">
          <div>
            <label for="tags">Tags:</label>
            <input
              type="text"
              id="tags"
              name="tags"
              placeholder="js, node, etc."
              value="<%= noteToEdit ? noteToEdit.tags : '' %>"
            />
          </div>
        </div>

        <div class="textareaGroup">
          <div>
            <label for="noteContent">Note:</label>
            <textarea
              name="noteContent"
              id="noteContent"
              rows="13"
              required
              placeholder="markdown format supported"><%= noteToEdit ? noteToEdit.content : '' %></textarea>
          </div>
          <% if (errors?.noteContent) { %>
            <span class="formError"><%= errors.noteContent %></span>
          <% } %>
        </div>

        <button class="createOrEditNoteBtn">
          <% if (inEditMode) { %>
            Update Note
          <% } else { %>
            Create Note
          <% } %>
        </button>
      </form>
    </div>
  </body>
</html>
